# These environment variables are used by the Vite frontend.
# Create a .env file in the root directory and add your Supabase credentials.
# IMPORTANT: Vite requires the VITE_ prefix for all client-side environment variables.

# Your project's Supabase URL.
# You can find this in your Supabase project's API settings.
VITE_SUPABASE_URL=your_supabase_project_url

# Your project's Supabase anon key.
# This key is safe to use in a browser environment.
VITE_SUPABASE_KEY=your_SUPABASE_KEY

# OpenAI API Configuration
# Copy this file to .env and replace the placeholder with your actual OpenAI API key
# IMPORTANT: All client-side variables must have VITE_ prefix

# Get your API key from: https://platform.openai.com/account/api-keys
VITE_OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model Selection (optional - defaults to gpt-4o)
# Available models:
# - gpt-4o (recommended for general use)
# - gpt-4-turbo
# - o1-mini-2024-12-17 (uses max_completion_tokens instead of max_tokens)
# - o1-preview-2024-12-17
# - o4-mini-2025-04-16 (uses max_completion_tokens instead of max_tokens)
VITE_OPENAI_MODEL=o4-mini-2025-04-16

# OpenAI API Base URL (optional - defaults to https://api.openai.com/v1)
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# Backend API Configuration
# Preferred variable for backend URL used by the app
# Example: https://tasklite-backend.onrender.com
VITE_BACKEND_URL=

# Backward-compatibility fallback (some older docs use this)
VITE_API_BASE_URL=

# Test user for End-to-End tests
E2E_TEST_USER_EMAIL=taski-test@yopmail.com
E2E_TEST_USER_PASSWORD=secret_password_here
